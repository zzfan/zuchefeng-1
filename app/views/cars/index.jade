// @file views/cars/index.jade

extends ../layouts/default

//block main
    h1= title

block content
    include ../utils/area.jade
                    
    - for (var i=0; i<Math.ceil(cars.length/3); i++)
        - console.log(cars.length)
        div.row
            - for (var j=0; j<3&&i*3+j<cars.length; j++)
                - var car = cars[i*3+j]
                div.col-md-4
                    div.thumbnail
                        img(src='img/1.jpeg')
                        div.caption
                            h3= car.name
                            p= car.desc
                            .meta
                                span.muted= formatDate(car.createdAt)
                                - if (car.seller)
                                    &nbsp; - &nbsp;
                                    span 拥有者 &nbsp;
                                    a(href='/sellers/'+car.seller._id)= car.seller.name
                            p
                                a.btn.btn-primary(href='/cars/'+car._id) 查看详情
    - if (pages>1)
        ul.pagination
            != createPagination(pages, page)
